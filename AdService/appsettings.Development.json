{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=AdvertDB.db"
  },

  "ApiSetting": {
    "MaxUserAdvertCount": "3", //Количество доступных объявлений для каждого пользователя
    "MaxAdvertsPhotoWeight": "1000000", //Ограничение на загрузку фото для объявления, максимум: 10 Mb
    "PathForAdvertsPicures": "/Pictures/" //Путь для сохранения фото
  }
}